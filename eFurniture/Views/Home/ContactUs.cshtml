@{
    ViewData["Title"] = "Contact Us";
}

<div class="container contact-page-section">

    <section class="contact-us" id="contactSectionHome">
        <div class="layer2">
            <h2 style="color: white; text-shadow: none;">Contact Us</h2>
            <form class="contact-form" asp-controller="Home" asp-action="ContactUs" method="post">
                <div class="contact-form-group ">
                    <label for="name">Name</label>
                    <input type="text" class="input-form-control" id="name" placeholder="Enter your name">
                </div>
                <div class="contact-form-group">
                    <label for="email">Email</label>
                    <input type="email" class="input-form-control" id="email" placeholder="Enter your email">
                </div>
                <div class="contact-form-group">
                    <label for="message">Message</label>
                    <textarea class="form-control" id="message" rows="3"
                              placeholder="Enter your message"></textarea>
                </div>
                <button type="submit" class="Shop-btn" style="align-self: center;">SEND</button>
            </form>
        </div>
    </section>
</div>

<style>
    .contact-page-section {
        margin-top: 5rem;
        margin-bottom: 5rem;
    }

    .contact-us {
        width: 70%;
        height: 60vh;
        margin: 10vh auto 18vh auto;
        border-radius: 5%;
   
        background-repeat: no-repeat;
        background-size: cover;
        background-position: bottom;
        -webkit-box-shadow: 0px 4px 17px 5px rgba(0, 0, 0, 0.81);
        box-shadow: 0px 4px 17px 5px rgba(0, 0, 0, 0.81);
    }

    .layer2 {
        width: 100%;
        height: 100%;
        background-color: #10101054;
        border-radius: 5%;
    }

    .contact-form {
        padding: 20px 0;
        width: 60%; 
        margin: 5rem auto;
        background-color: none;
        padding-bottom: 50px;
        font-size: 20px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        color: aliceblue;
        gap: 10px;
        text-align: left; 
    }

</style>